<!DOCTYPE html>
<html lang="ru">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Игра? Игра</title>
    <%- include('layouts/head') -%>
  </head>
  <body id="body">
    <div class="container">
      <%- include('layouts/header') -%>

      <style>
        canvas {
          background: rgba(255, 255, 255, 1);
          box-shadow: 0 0 2px black;
        }
      </style>

      <script>
        function update() {
          if (document.documentElement.scrollWidth > 800) {
            document.getElementById("game_info").innerHTML = "Зачем?";
            document.getElementById("game").style.display = "";
          } else {
            document.getElementById("game_info").innerHTML = "Эта штука не для маленьких экранов.";
            document.getElementById("game").style.display = "none";
          }
        }
        window.addEventListener("resize", update);
        window.onload = update;
      </script>

      <div class="content">
        <p id="game_info"></p>
        <canvas class="game" id="game" width="720" height="480" style="display: none"></canvas>
        <script src="./scripts/game.js"></script>
      </div>

      <%- include('layouts/footer') -%>
    </div>
  </body>
</html>
